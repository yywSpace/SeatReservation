<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="horizontal">

    <com.howshea.roundcornerimageview.RoundCornerImageView
        android:id="@+id/mine_org_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:background="@drawable/ic_org" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mine_org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="机构收藏" />

        <TextView
            android:id="@+id/mine_org_time_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/mine_org_name"
            tools:text="45%" />

        <ProgressBar
            android:id="@+id/mine_org_time_radio_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_org_name"
            android:layout_marginTop="5dp"
            android:progress="50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_org_name"
            tools:layout_editor_absoluteX="84dp" />

    </RelativeLayout>

</LinearLayout>